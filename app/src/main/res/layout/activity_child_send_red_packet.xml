<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_child_send_red_packet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.haoxiong.taotao.ui.sendredpacket.ChildSendRedPacketActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/liner_send_red_packet_child_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_send_red_packet_child_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发红包"
                android:textColor="#353336"
                android:textSize="17sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/liner_send_red_packet_child_save"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="#353336"
                android:textSize="16sp"
                android:id="@+id/textView" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView style="@style/view_h_without_margin_bg" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_send_red_packet_child_one"

            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingRight="11dp"
                android:layout_width="match_parent"
                android:layout_height="44.5dp">
                <EditText
                    android:id="@+id/et_send_red_packet_child_one"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@null"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333333"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_send_red_packet_child_one"
                    android:textSize="14sp"
                    android:textColor="#aaaaaa"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView style="@style/view_h_without_margin_bg" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_send_red_packet_child_two"

            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingRight="11dp"
                android:layout_width="match_parent"
                android:layout_height="44.5dp">
                <EditText
                    android:id="@+id/et_send_red_packet_child_two"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@null"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333333"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp" />
                <TextView
                    android:textColor="#aaaaaa"
                    android:id="@+id/tv_send_red_packet_child_two"
                    android:text=""
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView style="@style/view_h_without_margin_bg" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/liner_send_red_packet_child_three"

            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingRight="11dp"
                android:layout_width="match_parent"
                android:layout_height="88.5dp">
                <EditText
                    android:lineSpacingMultiplier="1.2"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:id="@+id/et_send_red_packet_child_three"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="12321"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#333333"
                    android:textColorHint="#aaaaaa"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_send_red_packet_child_three"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView style="@style/view_h_without_margin_bg" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="asdsadasd"
        android:id="@+id/tv_send_red_packet_child_rule"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="10dp"
        android:textColor="#aaaaaa"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:id="@+id/cb_send_red_packet_child_rule"
        android:text="不设范围，全国发布"
        android:textSize="12sp"
        android:textColor="#ff7b42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
