<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.haoxiong.taotao.ui.login.InviteCodeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_marginTop="68dp"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <EditText
            android:inputType="text"
            android:id="@+id/et_invite_code"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textColorHint="#d7d7d7"
            android:paddingLeft="8dp"
            android:hint="邀请码（可不填）"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />

        <TextView
            style="@style/view_h_without_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_invite_login"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/sp_16"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="#353336"
        android:text="登 录"
        android:background="@drawable/shape_login_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
</LinearLayout>
