<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.haoxiong.taotao.ui.map.ListMapActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">
        <EditText
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:lines="1"
            android:id="@+id/et_map_search"
            android:paddingLeft="8dp"
            android:textSize="12dp"
            android:hint="输入地址进行搜索"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@drawable/map_search"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
             />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/liner_map_back"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textSize="16dp"
            android:textColor="#353336"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_map_search"
        android:padding="8dp"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_map_search"
            android:background="#cccccc"
            android:text="收索"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent" />


    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_map_search"
        android:scrollbars="none"
        tools:listitem="@layout/item_map_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
