<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    android:gravity="center_horizontal"
    tools:context="com.haoxiong.taotao.ui.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write">

        <LinearLayout
            android:id="@+id/liner_login_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_margin="20dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/close"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_logo2"
        android:layout_width="85dp"
        android:layout_height="85dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="41dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <EditText
                android:maxLength="11"
                android:layout_marginRight="100dp"
                android:id="@+id/et_login_phone"
                android:inputType="number"
                android:textColor="#353336"
                android:textSize="16sp"
                android:textColorHint="#d7d7d7"
                android:paddingLeft="8dp"
                android:hint="手机号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />
            <TextView
                android:id="@+id/tv_login_send_code"
                android:layout_centerInParent="true"
                android:textColor="#353336"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:text="发送验证码"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/shape_login_code_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            style="@style/view_h_without_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <EditText
            android:maxLength="6"
            android:inputType="phone"
            android:id="@+id/et_login_code"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textColorHint="#d7d7d7"
            android:paddingLeft="8dp"
            android:hint="验证码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />

        <TextView
            style="@style/view_h_without_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/sp_16"
        android:gravity="center"
        android:textSize="@dimen/sp_16"
        android:textColor="#353336"
        android:text="登 录"
        android:background="@drawable/shape_login_bg"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
