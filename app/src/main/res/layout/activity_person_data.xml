<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/write"
    tools:context="com.haoxiong.taotao.ui.person.PersonDataActivity">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:paddingLeft="16dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/liner_person_back"
            android:gravity="center_vertical"
            android:layout_width="46dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_back"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="编辑资料"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/liner_save_persondata"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView style="@style/view_h_without_margin" />
    <com.pkmmte.view.CircularImageView
        android:id="@+id/img_person_head"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/head"
        android:layout_marginTop="22dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_marginTop="22dp"
        style="@style/view_h" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="昵称"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" />

        <EditText
            android:id="@+id/et_person_nickname"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:text=""
            tools:text="昵称"
            android:textColor="#3f3f3f"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        style="@style/view_h" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="性别"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" />

        <TextView
            android:id="@+id/et_person_sex"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:text="男"
            android:textColor="#3f3f3f"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        style="@style/view_h" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="生日"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/et_person_birthday"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:text=""
            tools:text="2017年7月29日11:18:22"
            android:textColor="#3f3f3f"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        style="@style/view_h" />
    <TextView
        android:id="@+id/tv_person_logout"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/set_money_next_press_shape"
        android:layout_marginTop="22dp"
        android:textSize="14sp"
        android:textColor="@color/write"
        android:text="退出登录"
        android:layout_width="170dp"
        android:layout_height="40dp" />
</LinearLayout>
