<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_red_packet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.haoxiong.taotao.ui.sendredpacket.SendRedPacketActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/liner_send_red_packet_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发红包"
                android:textColor="#353336"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_marginBottom="44dp"
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/write"
                android:orientation="vertical">
                <TextView style="@style/view_h_without_margin_bg" />
                <LinearLayout
                    android:id="@+id/liner_send_red_packet_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_title" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:id="@+id/tv_send_red_packet_title"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />

                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_content"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="内        容"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:id="@+id/textView6" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter"
                                android:id="@+id/imageView6" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_content"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" />
                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_advice"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                   >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_addvice_pic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="主题图片"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_advice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />
                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_contact"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_contact" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="联系方式"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_contact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint="可不填"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
                <TextView style="@style/view_h_without_margin_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/write"
                android:orientation="vertical">
                <TextView style="@style/view_h_without_margin_bg" />
                <LinearLayout
                    android:id="@+id/liner_send_red_packet_question"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                   >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_question1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="设置问题"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_question"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />
                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_right"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_ringt1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="正确选项"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:id="@+id/textView7" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_right"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp"
                                 />
                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_wrong"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                   >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_wrong" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="错误选项"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_wrong"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView style="@style/view_h_without_margin_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/write"
                android:orientation="vertical">
                <TextView style="@style/view_h_without_margin_bg" />
                <LinearLayout
                    android:id="@+id/liner_send_red_packet_distance"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_distance"
                        android:id="@+id/imageView5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="发放范围"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_diatance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />
                        </RelativeLayout>

                        <TextView style="@style/view_h_without_margin_bg" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_send_red_packet_local"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    >

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_local" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <ImageView
                                android:paddingRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_enter" />

                            <TextView
                                android:id="@+id/tv_send_red_packet_local"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="80dp"
                                android:layout_marginRight="32dp"
                                android:ellipsize="end"
                                android:gravity="end|center_vertical"
                                android:hint=""
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="#aaaaaa"
                                android:textSize="11dp" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="定        位"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:id="@+id/textView5" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                <TextView style="@style/view_h_without_margin_bg" />
            </LinearLayout>
            <TextView
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="13dp"
                android:textColor="#aaaaaa"
                android:text="有奖问答将以定位为中心，在发布范围内发布。"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_send_red_packet_scan"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="提交预览"
        android:textColor="#353336"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/scrollView2"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:text="标        题"
        android:textColor="#000000"
        android:textSize="14sp" />
</RelativeLayout>
