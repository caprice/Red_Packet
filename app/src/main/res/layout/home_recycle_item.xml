<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_title"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:text=""
            tools:text="喜马拉雅-动铁耳音"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="185dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="185dp">
            <ImageView
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/item"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@drawable/item"
                android:layout_width="0dp"
                android:layout_height="185dp"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_distance"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/red_pacekt_item_distence"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:text="1.7km"
            tools:text="1.7km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/red_packet"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <TextView
                android:id="@+id/home_money"
                android:layout_marginLeft="6dp"
                android:textSize="12sp"
                android:textColor="#989898"
                android:text=""
                tools:text="1000元/1000个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@mipmap/left_red_packet"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_marginLeft="6dp"
                android:textSize="12sp"
                android:textColor="#989898"
                android:text=""
                tools:text="1000个"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_mun" />
        </LinearLayout>
        <TextView
            android:id="@+id/home_donging"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/red_pacekt_enalbe"
            android:layout_alignParentRight="true"
            android:text="抢红包"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />
    </RelativeLayout>
    <TextView
        android:background="#cccccc"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>