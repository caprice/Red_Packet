<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="72dp"
            android:layout_height="36dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_end_img"
                android:src="@drawable/item"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img_end_img1"
                android:src="@drawable/item"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <TextView
                tools:text="阿斯顿那双大声道阿萨帝阿是本地按时打算那段阿迪巴萨"
                android:id="@+id/tv_end_title"
                android:textSize="14dp"
                android:textColor="#333333"
                android:maxLines="1"
                android:text=""
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_end_time"
                    android:textSize="12dp"
                    android:textColor="#888888"
                    android:maxLines="1"
                    android:text=""
                    tools:text="2017-07-01"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="22dp"
                    android:id="@+id/tv_end_content"
                    android:textSize="12dp"
                    android:textColor="#888888"
                    android:maxLines="1"
                    android:text=""
                    tools:text="2017元/200个"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView style="@style/view_h_without_margin" />
</LinearLayout>