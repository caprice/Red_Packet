<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:clickable="false"
    android:gravity="center_horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:src="@mipmap/head"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#333333"
            android:textSize="18sp"
            tools:text="刘博文" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_red_count1" />

            <TextView
                android:id="@+id/tv_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="1000元"
                android:textColor="#ff7b42"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="35dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/packet1"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="钱包"
            android:textColor="#343436"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:clickable="false"
                android:drawableLeft="@drawable/message1"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="我的消息"
                android:textColor="#343436"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/message_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/message_count_bg"
                android:gravity="center"
                android:text="99+"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_prize_invited"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/share11"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="邀请好友"
            android:textColor="#343436"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_red_maneger"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/manager1"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="发布管理"
            android:textColor="#343436"

            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/save1"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="我的收藏"
            android:textColor="#343436"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_active"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="6dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableLeft="@drawable/active1"
            android:drawablePadding="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="活动"
            android:textColor="#343436"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/tv_contect_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/phone1"
        android:text="客服中心"
        android:textColor="#343436"
        android:textSize="12sp" />
    <LinearLayout
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:paddingBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/message_count2_bg"
                android:layout_width="6dp"
                android:layout_height="6dp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <TextView
                android:layout_centerVertical="true"
                android:background="@drawable/message_count2_bg"
                android:layout_width="6dp"
                android:layout_height="6dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
